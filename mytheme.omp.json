{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "palette": {
    "dark-red": "#7F0000",
    "dark-green": "#007F00",
    "dark-blue": "#00007F",
    "orange": "#FF7F00",
    "teal": "#008080",
    "dark-teal": "#006060",
    "battery": "#c0a000",
    "battery-foreground": "white",
    "battery-charging": "blue",
    "battery-full": "p:dark-green",
    "battery-discharging": "p:orange",
    "git-foreground": "white",
    "git": "p:dark-green",
    "git-modified": "#A05000",
    "git-diverged": "#A04500",
    "git-ahead": "#B388FF",
    "git-behind": "#B388FF"
  },
  "final_space": true,
  "console_title_template": "{{ if .Root }}root {{ end }}{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "white",
          "background_templates": [
            "{{ if .Root }}p:dark-red{{else}}p:dark-blue{{ end }}"
          ],
          "trailing_diamond": "\ue0b0",
          "template": " {{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "white",
          "background": "p:dark-blue",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "~",
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:git-foreground",
          "background": "p:git",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:git-modified{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:git-diverged{{ end }}",
            "{{ if gt .Ahead 0 }}p:git-ahead{{ end }}",
            "{{ if gt .Behind 0 }}p:git-behind{{ end }}"
          ],
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true,
          "foreground": "white",
          "background": "#406080",
          "template": "{{ .FormattedMs }}",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "invert_powerline": true,
          "foreground": "white",
          "background": "p:dark-teal",
          "powerline_symbol": "\ue0b2",
          "template": " {{ .CurrentDate | date .Format }} "
        },
        {
          "type": "battery",
          "style": "diamond",
          "leading_diamond": "\ue0b2",
          "invert_powerline": true,
          "foreground": "p:battery-foreground",
          "background": "p:battery",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}p:battery-charging{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:battery-discharging{{end}}",
            "{{if eq \"Full\" .State.String}}p:battery-full{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}% ",
          "properties": {
            "charged_icon": "\ue22f ",
            "charging_icon": "\ue234 ",
            "discharging_icon": "\ue231 "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "trailing_diamond": "\ue0b0",
          "foreground": "white",
          "background": "p:dark-blue",
          "template": " {{ .PromptCount }} ",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "status",
          "style": "diamond",
          "trailing_diamond": "\ue0b0",
          "foreground": "white",
          "background": "p:dark-green",
          "background_templates": [
            "{{ if .Error }}p:dark-red{{ end }}"
          ],
          "template": " {{ .Code }} ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}